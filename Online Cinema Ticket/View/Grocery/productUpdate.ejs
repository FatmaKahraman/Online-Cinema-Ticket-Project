<%- include ../layouts/header.ejs %>
<div class="page-data">
    <form method="post" action="/admin/grocery/update/<%=data[0].ptype%>">
        <table cellpadding="11">
            <tr>
                <td class="label">Product Type</td>
                <td><input type="text" name="ptype" value="<%=data[0].ptype%>" required /></td>
            </tr>
            <tr>
                <td class="label">Product Price</td>
                <td><input type="text" name="price" value="<%=data[0].price%>" required /></td>
            </tr>
            <tr>
                <td class="label">Stock</td>
                <td><input type="text" name="stock" value="<%=data[0].stock%>" required /></td>
            </tr>
            <tr>
                <td class="label"></td>
                <td>
                    <button type="submit">Save</button>
                    <button type="button" onClick="PCancel()">Cancel</button>
                </td>
            </tr>
        </table>
    </form> 
</div>
