<%- include ../layouts/header.ejs %>
<div class="page-data">
    <div class="data-btn">
        <button onClick="insertGrocery();">+ Insert +</button>
    </div>
    <div class="data-table">
        <table>
            <tr>                
                <th>Product Type</th>
                <th>Price</th>
                <th>Stock</th>
                <th width="120px">Action</th>
            </tr>
            <% if(data.length){
            for(var i = 0;i < data.length;i++) { %>
            <tr>
                <td><%=data[i].ptype%></td>
                <td><%=data[i].price%></td>
                <td><%=data[i].stock%></td>
                <td>
                    <a href="../admin/grocery/update/<%=data[i].ptype%>"> Update </a>
                </td>
            </tr>
            <% }
            }else{ %>
            <tr>
                <td colspan="6">No user</td>
            </tr>
            <% } %>
        </table>
        <button onClick="returnAdminPage();">RETURN MAIN PAGE</button>
    </div>
</div>

